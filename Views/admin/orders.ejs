<%- include('../partials/header.ejs') %>

<main>
  <% if (orders.length <= 0) { %>
  <h1>Nothing there!</h1>
  <% } else { %>
  <div class="form-control">
    <form action="/admin/orders" method="POST">
      <label for="paymentStatus" class="mt-2">Sort by:</label>
        <select name="paymentStatus" id="paymentStatus" class="mb-3" required>
          <option>Choose option</option>
          <option value="full">Payment status: Full</option>
          <option value="deposit">Payment status: Deposit</option>
          <!-- <option value="date">Date</option> -->
        </select>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <button type="submit" class="btn">Sort</button>
    </form>
  </div>
  <br />
  <ul class="orders">
    <% totalPrice = 0 %> <% orders.forEach(order => { %>
    <li class="orders__item">
      <div class="spaceBetween">
        <h1>Order - # <%= order._id %></h1>
        <%= order.createdAt %>
      </div>
      <ul class="orders__products">
        <% order.products.forEach(p => { %>
        <li class="orders__products-item">
          <%= p.product.title %> (<%= p.quantity %>)
          <h3>₦<%= p.product.price %></h3>
          <% itemTotalPrice = p.product.price * p.quantity %> <% totalPrice =
          totalPrice + itemTotalPrice %>
        </li>
        <% }); %>
        <div class="spaceBetween">
          Payment Status: <%= order.paymentStatus %>
          <div>Ordered by: <%= order.user.name %></div>
        </div>
        <div class="spaceBetween">
          <h3>Total Price: ₦<%= totalPrice %></h3>
          <a href="/invoice/<%= order._id %>" class="btn">Generate invoice</a>
        </div>
        <% totalPrice = 0 %>
      </ul>
    </li>
    <% }); %>
  </ul>
  <% } %>

  <!-- <div class="centered">
        <form action="/create_order" method="POST">
          <button type="submit" class="btn">Order Now!</button>
        </form>
      </div> -->
</main>

<%- include('../partials/footer.ejs') %>
